@model JobDetailsDto;

    <form method="post" asp-controller="JobDetails" asp-action="Create">
    <div class="row mb-3">
        <label class="col-md-4">Name</label>
        <input asp-for=Name  class="col-md-4" type="text" name="Name"/>
    </div>
    <div class="row mb-3">
        <label class="col-md-4">Phone Number</label>
        <input asp-for=Phone class="col-md-4"  type="text" name="Phone" />
    </div>
    <div class="row mb-3">
        <label class="col-md-4">Province</label>
        <input asp-for=Province class="col-md-4" type="text" name="Province" />
    </div>
    <button type="submit">Submit</button>
    </form>

    <p>Hello @ViewData["Name"]! Good Morning! Your Phone No is @ViewData["Phone"]</p>
